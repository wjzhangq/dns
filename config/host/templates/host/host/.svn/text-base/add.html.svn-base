{% extends 'base.html' %}
{% block body %}
<h1>Add</h1>
<div id="content-main">
<fieldset class="module aligned">
    {% if error %}<ul class="errorlist"><li>{{ error }}</li></ul><br/>{% endif %}
    <form enctype="multipart/form-data" action="" method="post" id="host_form">
        <div class="form-row">
            <div><label>Name:</label><input name="name" value="{{ name }}" maxlength="50"/></div>
        </div>
        <div class="form-row">
            <div><label>Content</label><textarea name="content" rows="30" cols="60">{{ content }}</textarea></div>        
        </div>
        <div class="form-row">
            <div>
                <label>Action</label>
                <input type="submit" id="confirm"  value="Add"/>
            </div>
        </div>
    </form>
</fieldset>
</div>
{% endblock %}