{% extends 'base.html' %}
{% block body %}
<h1>Update</h1>
<div id="content-main">
<fieldset class="module aligned">
    {% if error %}<ul class="errorlist"><li>{{ error }}</li></ul><br/> {% endif %}
    <form enctype="multipart/form-data" action="/host/update/{{ name }}/" method="post" id="host_form">
        <div class="form-row">
            <div><label>name:</label>{{ name }}</div>
        </div>
        <div class="form-row">
            <div><label>content</label><textarea name="content" rows="30" cols="60">{{ content }}</textarea></div>        
        </div>
        <div class="form-row">
            <div>
                <label>Actions</label>
                <input type="submit" id="confirm"  value="Update"/>
            </div>
        </div>
    </form>
</fieldset>
</div>
{% endblock %}